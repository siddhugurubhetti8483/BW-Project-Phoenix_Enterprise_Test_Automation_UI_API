<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Phoenix Suite" parallel="false">
  <listeners>
    <listener class-name="com.phoenix.reporting.TestListener"/>
  </listeners>

  <test name="UI Tests">
    <classes>
      <class name="com.phoenix.tests.ui.AdminLoginTest"/>
      <class name="com.phoenix.tests.ui.PIMFlowTest"/>
    </classes>
  </test>

  <test name="BDD Cucumber">
    <classes>
      <class name="com.phoenix.bdd.runner.CucumberTestRunner"/>
    </classes>
  </test>

  <test name="API Tests">
    <classes>
      <class name="com.phoenix.tests.api.EmployeeApiTest"/>
    </classes>
  </test>
</suite>
